<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txt_style">
        <item name="android:textColor">?attr/txt_color</item>
        <item name="android:fontFamily">@font/suit</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="btn_main_style" parent="txt_style">
        <item name="android:textColor">?attr/btn_main_txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">500</item>

        <item name="android:background">@drawable/sh_radious_10</item>
        <item name="android:backgroundTint">?attr/btn_main_bg_color</item>

        <item name="android:gravity">center</item>

        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="edt_style" parent="txt_style">
        <item name="android:textColor">?attr/edt_txt_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>

        <item name="android:background">@drawable/sh_radious_10</item>
        <item name="android:backgroundTint">?attr/edt_bg_color</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="header_title_type" parent="txt_style">
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>