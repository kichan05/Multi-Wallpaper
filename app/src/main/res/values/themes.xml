<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MultiWallpaper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!--    Color state    -->
        <item name="weight_bg_color">#ffffff</item>
        <item name="bg_color">#F4F4F4</item>

        <item name="txt_color">@color/black</item>

        <item name="btn_main_txt_color">@color/white</item>
        <item name="btn_main_bg_color">@color/blue_600</item>

        <item name="btn_red_txt_color">@color/white</item>
        <item name="btn_red_bg_color">@color/red</item>

        <!--    Design System Theme    -->
        <item name="android:windowBackground">?attr/bg_color</item>
        <item name="android:spotShadowAlpha">0.5</item>
        <item name="android:textViewStyle">@style/txt_style</item>
        <item name="android:buttonStyle">@style/btn_main_style</item>
    </style>
</resources>