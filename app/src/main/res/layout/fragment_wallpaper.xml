<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WallpaperFragment">

        <ImageView
            android:id="@+id/img_main_wallpaper"
            android:layout_width="300dp"
            android:layout_height="600dp"

            android:src="@drawable/ryo"
            android:background="@drawable/sh_phone_preview"
            android:scaleType="centerCrop"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_main_wallpaperName"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintVertical_chainStyle="packed"
            />

        <TextView
            android:id="@+id/txt_main_wallpaperName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="봇치"
            android:textSize="20sp"

            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/img_main_wallpaper"
            app:layout_constraintStart_toStartOf="@id/img_main_wallpaper"
            app:layout_constraintEnd_toEndOf="@id/img_main_wallpaper"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>