<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddWallpaperActivity">


        <ImageView
            android:id="@+id/img_addWallpaper_preview"
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:background="@drawable/sh_phone_preview"
            android:scaleType="centerCrop"

            android:src="@drawable/ryo"
            app:layout_constraintBottom_toTopOf="@id/edt_addWallpaper_wallpaperName"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/edt_addWallpaper_wallpaperName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ui_padding_horizontal"
            android:layout_marginTop="20dp"
            android:hint="배경화면의 이름을 입력해주세요"

            android:singleLine="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_addWallpaper_preview" />

        <Button
            android:id="@+id/btn_addWallpaper_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ui_padding_horizontal"
            android:layout_marginBottom="@dimen/ui_padding_vertical"

            android:text="저장"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>